<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageView
        android:id="@+id/poster_film_imageview"
        android:layout_width="150dp"
        android:layout_height="216dp"
        tools:src="@drawable/film_poster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="contentDescription"/>

    <TextView
        android:id="@+id/name_film_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_film"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/poster_film_imageview"
        app:layout_constraintStart_toStartOf="@id/poster_film_imageview"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/description_film_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:lines="6"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/name_film_text_view"
        app:layout_constraintStart_toStartOf="@id/name_film_text_view"
        app:layout_constraintEnd_toEndOf="@id/poster_film_imageview"/>

</androidx.constraintlayout.widget.ConstraintLayout>